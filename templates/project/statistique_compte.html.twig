{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="css/statistique.css">
{% endblock %}

{% block body %}
	<h1> Statistiques Compte </h1>

    <br />

    <div class="container">

        <form class="">

            <div class="form-group row">
                <label for="periode" class="">Etendue de la période d'analyse avant ce jour en mois :</label>
                <div class="col-sm-1">
                    <input type="text" class="form-control" id="periode" NAME="periode" VALUE="">
